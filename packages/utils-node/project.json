{
  "name": "utils-node",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils-node/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn build:target utils-node"
      }
    },
    "_buildTsc": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/utils-node",
        "main": "packages/utils-node/src/index.ts",
        "tsConfig": "packages/utils-node/tsconfig.lib.json",
        "assets": [
          "packages/utils-node/*.md"
        ]
      }
    },
    "_buildWeb": {
      "executor": "@websaam/nx-esbuild:package",
      "options": {
        "globalName": "LitJsSdk_utilsNode",
        "outfile": "dist/packages/utils-node-vanilla/utils-node.js",
        "entryPoints": [
          "./packages/utils-node/src/index.ts"
        ],
        "define": {
          "process.env.NODE_DEBUG": "false",
          "global": "window"
        },
        "plugins": [
          {
            "package": "esbuild-node-builtins",
            "function": "nodeBuiltIns"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/utils-node/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/utils-node"
      ],
      "options": {
        "jestConfig": "packages/utils-node/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}