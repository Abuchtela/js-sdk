{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "build":{
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn nx run core:_buildTsc && yarn nx run core:_buildWeb && yarn nx run core:copyJSONFilesToDist"
      }
    },
    "_buildTsc": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/core",
        "main": "packages/core/src/index.ts",
        "tsConfig": "packages/core/tsconfig.lib.json",
        "assets": ["packages/core/*.md"]
      }
    },
    "_buildWeb": {
      "executor": "@websaam/nx-esbuild:package",
      "options": {
        "globalName": "LitJsSdk_Core",
        "outfile":"dist/packages/core/web/core.js",
        "entryPoints": ["./packages/core/src/index.ts"],
        "define": { "global": "window" },
        "plugins":[
          {
            "package": "esbuild-node-builtins",
            "function": "nodeBuiltIns"
          }
        ]
      }
    },
    "copyJSONFilesToDist": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p dist/packages/core/web/abis && cp ./packages/core/src/abis/ERC20.json dist/packages/core/web/abis/ERC20.json && cp ./packages/core/src/abis/LIT.json dist/packages/core/web/abis/LIT.json"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/core"],
      "options": {
        "jestConfig": "packages/core/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
