{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils/src",
  "projectType": "library",
  "targets": {

    "build":{
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn nx run utils:_buildTsc && yarn nx run utils:_buildWeb"
      }
    },
    "_buildTsc": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/utils",
        "main": "packages/utils/src/index.ts",
        "tsConfig": "packages/utils/tsconfig.lib.json",
        "assets": ["packages/utils/*.md"]
      },
      "dependsOn": [
        "_buildConstants",
        "testPackage"
      ]
    },
    "_buildWeb": {
      "executor": "@websaam/nx-esbuild:package",
      "options": {
        "globalName": "LitJsSdk_Utils",
        "outfile":"dist/packages/utils/web/utils.js",
        "entryPoints": ["./packages/utils/src/index.ts"],
        "define": { "global": "window" },
        "plugins":[
          {
            "package": "esbuild-node-builtins",
            "function": "nodeBuiltIns"
          }
        ]
      }
    },
    "_buildConstants":{
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn nx run constants:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/utils/**/*.ts"]
      }
    },
    "testPackage": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/utils"],
      "options": {
        "jestConfig": "packages/utils/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["constants"]
}
