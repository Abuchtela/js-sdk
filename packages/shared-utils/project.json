{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shared-utils/src",
  "projectType": "library",
  "targets": {

    "build":{
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn nx run shared-utils:_buildTsc && yarn nx run shared-utils:_buildWeb"
      }
    },
    "_buildTsc": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/shared-utils",
        "main": "packages/shared-utils/src/index.ts",
        "tsConfig": "packages/shared-utils/tsconfig.lib.json",
        "assets": ["packages/shared-utils/*.md"]
      },
      "dependsOn": [
        "_buildConstants",
        "testPackage"
      ]
    },
    "_buildWeb": {
      "executor": "@websaam/nx-esbuild:package",
      "options": {
        "banner": {
          "js": "import { createRequire } from 'module';const require = createRequire(import.meta.url);"
        },
        "globalName": "LitJsSdk_Utils",
        "outfile":"dist/packages/shared-utils-vanilla/shared-utils.js",
        "entryPoints": ["./packages/shared-utils/src/index.ts"],
        "define": { "global": "window" },
        "plugins":[
          {
            "package": "esbuild-node-builtins",
            "function": "nodeBuiltIns"
          }
        ]
      }
    },
    "_buildConstants":{
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn nx run constants:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/shared-utils/**/*.ts"]
      }
    },
    "testPackage": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/shared-utils"],
      "options": {
        "jestConfig": "packages/shared-utils/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["constants"]
}
