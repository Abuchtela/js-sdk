#!/bin/bash

yarn build:packages

packages=(
  "lit-node-client"
  "lit-node-client-nodejs"
  "auth-browser"
  "encryption"
  "uint8arrays"
  "types"
  "pkp-cosmos"
  "pkp-ethers"
)

# then in your project, do `npm link @lit-protocol/lit-node-client`

pids=()
for package in "${packages[@]}"; do
  cd packages/$package && npm link && cd ../..
  pids+=($!)
done